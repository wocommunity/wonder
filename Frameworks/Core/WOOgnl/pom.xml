<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>wonder.frameworks</groupId>
		<artifactId>core</artifactId>
		<version>5.0.0-SNAPSHOT</version>
	</parent>
	<groupId>wonder.core</groupId>
	<artifactId>WOOgnl</artifactId>
	<name>WOOgnl Framework</name>
	<packaging>woframework</packaging>
	<profiles>
		<profile>
			<id>wo53</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<woClassifier>wo53</woClassifier>
				<sourceForWOVersion>${basedir}/Sources_WO53</sourceForWOVersion>
			</properties>
		</profile>
		<profile>
			<id>wo54</id>
			<properties>
				<woClassifier>wo54</woClassifier>
				<sourceForWOVersion>${basedir}/Sources_WO54</sourceForWOVersion>
			</properties>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>com.webobjects</groupId>
			<artifactId>JavaDirectToWeb</artifactId>
		</dependency>
		<dependency>
			<groupId>ognl</groupId>
			<artifactId>ognl</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>${basedir}/Sources</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.objectstyle.woproject.maven2</groupId>
				<artifactId>maven-wolifecycle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<skipAppleProvidedFrameworks>true</skipAppleProvidedFrameworks>
					<classifier>${woClassifier}</classifier>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${sourceForWOVersion}</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>