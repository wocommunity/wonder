                <exclude name="**/*.java" />
                <exclude name="**/.svn" />
                <exclude name="**/CVS" />
            </classes>
            <sources dir="${project.sources.dir}" if="include.source">
                <include name="**/*.java" />
            </sources>
            <resources dir="${project.dir}/Components">
